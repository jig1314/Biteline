@using Biteline.Client.ViewModels

<BSContainer>
    <BSRow>
        <BSCol>
            <h4>Items</h4>
        </BSCol>
        <BSCol>
            <h4 style="text-align: right;">Add <i @onclick="(() => OnAddButtonClicked.InvokeAsync())" style="font-size: 1.25rem; cursor: pointer;" class="fas fa-plus-circle"></i></h4>
        </BSCol>
    </BSRow>
    <BSRow>
        @if (Items != null)
        {
            @foreach (var item in Items)
            {
                <BSCol style="padding-left: 10px; padding-right: 10px; margin-bottom: 15px; min-width: 250px; max-width: 50%;">
                    <ItemCard OnEditButtonClicked="OnEditButtonClicked" OnDeleteButtonClicked="OnDeleteButtonClicked" Item="item" />
                </BSCol>
            }
        }
    </BSRow>
</BSContainer>

@code
{
    public bool IsDropdownOpen = false;

    [Parameter]
    public EventCallback OnAddButtonClicked { get; set; }

    [Parameter]
    public EventCallback<AddItemViewModel> OnEditButtonClicked { get; set; }

    [Parameter]
    public EventCallback<AddItemViewModel> OnDeleteButtonClicked { get; set; }

    [Parameter]
    public List<AddItemViewModel> Items { get; set; }
}